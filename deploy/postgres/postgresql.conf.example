shared_buffers = 4GB
effective_cache_size = 12GB
work_mem = 32MB
maintenance_work_mem = 1GB

wal_level = replica
wal_compression = on
archive_mode = on
archive_timeout = 60s
archive_command = 'test ! -f /var/lib/postgresql/wal-archive/%f && cp %p /var/lib/postgresql/wal-archive/%f' # keep && unescaped so the shell runs both commands
max_wal_size = 8GB
min_wal_size = 2GB
